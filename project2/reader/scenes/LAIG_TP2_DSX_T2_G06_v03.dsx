        <!-- Platform -->
        <component id="platform">

            <transformation>
                <scale x="10" y="10" z="1"/>
                <translate x="-0.5" y="-0.5" z="0"/>
            </transformation>

            <materials>
                <material id="default"/>
            </materials>

            <texture id="none"/>

            <children>
                <primitiveref id="chessboard"/>
            </children>

        </component>

        <!-- Ground -->
        <component id="base_ground">

            <transformation>
                <translate x="-50" y="-50" z="-0.01"/>
            </transformation>

            <materials>
                <material id="ground"/>
            </materials>

            <texture id="grass"/>

            <children>
                <primitiveref id="plane"/>
            </children>

        </component>

